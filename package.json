{
    "name": "torquescript",
    "displayName": "TorqueScript",
    "description": "Syntax highlighting for Torque3D's TorqueScript",
    "version": "1.0.1",
    "engines": {
        "vscode": "^0.10.5"
    },
    "publisher": "zfbx",
    "author": {
        "name": "zfbx"
    },
    "icon": "images/torque.png",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "galleryBanner": {
        "color": "#990000",
        "theme": "dark"
    },
    "contributes": {
        "languages": [
            {
                "id": "torquescript",
                "aliases": [
                    "Torquescript",
                    "torquescript",
                    "TorqueScript"
                ],
                "extensions": [
                    ".tscript",
                    ".gui",
                    ".mis"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "torquescript",
                "scopeName": "source.torquescript",
                "path": "./syntaxes/torquescript.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "torquescript",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/zfbx/TorqueScript.git"
    }
}